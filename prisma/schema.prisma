datasource db {
  provider = "sqlite"
  url      = "file:./tournaments.db"
}

generator client {
  provider = "prisma-client-js"
}

model Tournament {
  id            String      @id
  date          String
  year          String
  location      String
  venue         String
  tournamentName String
  mapsLink      String
  forumUrl      String
  days          String
  categories    String
  createdAt     DateTime    @default(now())
}
